{
  "name": "sandbox_threejs",
  "productName": "sandbox_threejs",
  "description": "Sandbox for stuff.",
  "scripts": {
    "dev": "webpack serve --config ./src/client/webpack.dev.js",
    "build:platform": "tsc -p ./src/platform",
    "build:webpack": "webpack --config ./src/client/webpack.prod.js && tsc -p ./src/platform",
    "build": "npm run build:webpack && npm run build:platform && cp -r ./src/client/css ./dist/client/css && cp ./src/client/index.html ./dist/client/index.html",
    "start": "node ./dist/platform/platform.js"
  },
  "version": "v0.0.1",
  "author": "Trent Polack",
  "homepage": "https://trent-polack.com",
  "license": "MIT",
  "repository": "https://github.com/trentpolack/sandbox_threejs",
  "devDependencies": {
    "@types/three": "^0.135.0",
    "three": "^0.136.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1",
    "webpack-merge": "^5.8.0"
  }
}